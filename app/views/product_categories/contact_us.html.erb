
	<% if !flash.empty? %>
	<div class="panel msg" style="color:#fff; background-color:#008000, height:45px; border-radius:10px">
		<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, class: "alert alert-info" %>
		<% end %>
	</div>
	<% end %>


