<div class="row">
  	<div class="large-2 medium-4 small-12 columns sidebar-margin" style="margin-bottom:3%">
		<section class="top-bar-section" data-topbar>
	      	<ul class="off-canvas-list left">
		      	<li><label>Shop by Categories</label></li>
		      	<% @categories = ProductCategory.where('status = ?','active').order('name ASC') %>
				<% @categories.each do |category| %>
			        <li>

			        	<% if category.product_subcategories.empty? %>
			        	<a href="/product_subcategory/<%= category.id %>" class="<%= check_has_dropdown_category(category) %>">
			        	<% else %>
			        	<a class="<%= check_has_dropdown_category(category) %>">
			        	<% end %>
			        	<%= category.name %> 
			        		<% if !category.product_subcategories.empty? %>
			        			<span class="right"> + </span>
			        		<% end %>
			        	</a>
			        </li>
			        <% if !category.product_subcategories.where('status = ?','active').empty? %>
					<ul style="width:100%" class="off-canvas-submenu">
						<% category.product_subcategories.where('status = ?','active').order('name ASC').each do |subcategory| %>
							<li style="margin-left:5%; width:95%">
							<% if subcategory.product_subsubcategories.where('status = ?','active').empty? %>
				        	<a href="/product_subsubcategory/<%= subcategory.id %>" class="<%= check_has_dropdown_subcategory(subcategory) %>">
				        	<% else %>
				        	<a class="<%= check_has_dropdown_subcategory(subcategory) %>">
				        	<% end %>
				        	> <%= subcategory.name %>
								<% if !subcategory.product_subsubcategories.empty? %>
				        			<span class="right"> + </span>
				        		<% end %>
								</a>
							</li>
							<% if !subcategory.product_subsubcategories.where('status = ?','active').empty? %>
							<ul class="off-canvas-submenu" style="width:100%;">
								<% subcategory.product_subsubcategories.where('status = ?','active').order('name ASC').each do |subsubcategory| %>
									<li style="margin-left:10%; width:90%"><a href="/products?product_category_id=<%= category.id %>&product_subcategory_id=<%= subcategory.id %>&product_subsubcategory_id=<%= subsubcategory.id %>">>><%= subsubcategory.name %>
										</a>
									</li>
									
								<% end %>
							</ul>
							<% end %>
						<% end %>
					</ul>
					<% end %>
			    <% end %>
	      	</ul>
		</section>
