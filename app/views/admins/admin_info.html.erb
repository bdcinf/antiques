

<style>
	.top-bar-section ul li a {
		width:100%;
	}
</style>

<div class="row Products">
	<div class="large-10 large-centered columns" style="margin-top:3%">
		<h4><b>All Categories<b></h4>
	</div>
	<div class="large-12 small-12 columns">
		<div class="row rowman">
			<div class="large-10 small-12 large-centered columns">
			<% if @categories %>
				<% @categories.each do |category| %>
					<div class="row" style="background:#E9E9E9; border-radius:8px">
						<div class="large-1 small-2 columns" style="margin-top:1%; margin-bottom:1%">
							<img src="<%= category.img_file.url %>" style="height:50px;max-width:100%">
						</div>
						<div class="large-7 small-6 columns" style="margin-top:1%">
							<h4 style="float:left; font-size:18px; font-weight:bold"><%= link_to ''+category.name+'',url_for(controller: :admins, action: :show_subcategories,id: category.id) %>
							</h4>
						</div>
						<div class="large-2 small-2 columns" style="margin-top:1%">
							<a style="float:left" class="tiny button info radius edit-button" href="/admins/edit_category/<%= category.id %>">Edit</a>
						</div>
						<div class="large-2 small-2 columns" style="margin-top:1%">
							<%= link_to 'Delete',url_for(controller: :admins, action: :delete,id: category.id),:class=> 'tiny button alert radius secondary delete-button', method: :delete, data: {confirm: "Are you sure you want to delete this category?"} %>
						</div>
					</div>	
					<hr>
				<% end %>
			<% end %>
			</div>
		</div>
	</div>
</div>
