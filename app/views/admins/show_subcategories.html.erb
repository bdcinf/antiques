<style>
	.top-bar-section ul li a {
		width:100%;
	}
</style>

<div class="row Products">

	<div class="large-10 large-centered columns" style="margin-top:3%">
		<h4><b>Subcategories<b></h4>
	</div>
	<div class="large-12 small-12 columns">
		<div class="row rowman">
			<div class="large-10 large-centered columns">
			<% if @subcategories %>
				<% @subcategories.each do |subcategory| %>
					<div class="row" style="background:#eee; border-radius:8px">
						<div class="large-1 columns" style="margin-top:1%; margin-bottom:1%">
							<img src="<%= subcategory.img_file.url %>" style="max-width:100%;height:50px">
						</div>
						<div class="large-7 columns" style="margin-top:1%">
							<h4 style="float:left; font-size:18px; font-weight:bold"><%= link_to ''+subcategory.name+'',url_for(controller: :admins, action: :show_subsubcategories,id: subcategory.id) %></h4>
						</div>
						<div class="large-2 columns" style="margin-top:1%">
							<a style="float:left" class="ProductDetails tiny button radius info QuickView" href="/admins/edit_subcategory/<%= subcategory.id %>">Edit</a>
						</div>
						<div class="large-2 columns" style="margin-top:1%">
							<%= link_to 'Delete','/admins/delete_subcategory/'+subcategory.id.to_s, :class =>'ProductDetails tiny button radius alert QuickView',method: :delete, data: {confirm: "Are you sure you want to delete this subcategory?"} %>
						</div>
					</div>
					<hr>
				<% end %>
			<% end %>
			</div>
		</div>
	</div>
</div>