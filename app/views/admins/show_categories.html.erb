<style>
	.top-bar-section ul li a {
		width:100%;
	}
</style>

<div class="row Products">
	<div class="large-10 large-centered columns">
		<a class="small button" style="border-radius:8px" href="/admins/new_category">+ Add New Category</a>
		<h4><b>All Categories<b></h4>
	</div>
	<div class="large-12 small-12 columns">
		<div class="row rowman">
			<% if @categories %>
				<% @categories.each do |category| %>
					<div class="large-10 large-centered columns panel">
						<div class="row">
							<div class="large-1 columns">
								<img src="<%= category.img_file.url %>" style="max-width:100%">
							</div>
							<div class="large-7 columns">
								<%= category.name %>
							</div>
							<div class="large-2 columns">
								<a style="float:left" class="ProductDetails tiny button radius secondary QuickView" href="/admins/edit_category/<%= category.id %>">Edit</a>
							</div>
							<div class="large-2 columns">
								<%= link_to 'Delete','/admins/delete_category/'+category.id.to_s, :class =>'ProductDetails tiny button radius secondary QuickView',method: :delete, data: {confirm: "Are you sure you want to delete this category?"} %>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>