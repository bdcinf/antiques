
<div class="row" style="margin-top:3%">
	<div class="large-10 large-centered columns panel">
		<div class="row">
			<div class="large-5 columns">
				<div class="row">
					<div class="large-12 columns" style="width:320px; height:320px; display:table-cell; vertical-align:middle; text-align:center">
						<a href="<%= @product.img_file.url %>">  

							<img id="main-image" style="max-width:100%;max-height:100%" src="<%= @product.img_file.url %>">

						</a>
					</div>
				</div>
				<div class="row" style="margin-top:20px">
					<div class="large-12 columns">
						<div style="display:block">
						<img class="thumb" style="width:50px; height:50px" src="<%= @product.img_file.url %>">
						<% @product.product_images.each do | img | %>
					     	<img class="thumb" style="width:50px; height:50px" src="<%= img.image.url %>">
					    <% end %>
					    </div>
					</div>
				</div>
			</div>
			<div class="large-6 columns">
				<h2 id="product_nametag"><%= @product.product_var_id %>. <%= @product.name %></h2>
				<br>
				<span id="price_span"><h4 id="price_tag">Price : </h4><h5 id="price">INR <%= @product.price %></h5></span>
				<br>
				<h4 id="pro_description_tag">Product Description :</h4>
				<p><i><%= raw(@product.description) %></i></p>
			</div>
		</div>
</div>
